<%= form_for(@location) do |f| %>
    <%= f.text_field :name, placeholder: 'Nombre', required: true %> <br>
    <%= f.text_field :latitude, placeholder: 'Latitud', required: true %> <br>
    <%= f.text_field :longitude, placeholder: 'Longitud', required: true %> <br>
    <%= f.number_field :capacity, placeholder: 'Capacidad', required: true %> <br>
    <%= f.submit %>
<% end %>