<div class="container p-3 my-3 border">
    <h1>Nuevo test positivo</h1>
</div>
<div class="container p-3 my-3 border">
    <%= form_for(@positive_test, url: {controller: 'covid_tests', action: 'create_positive'}) do |f| %>
    <%= f.date_field :date, placeholder: 'Fecha', required: true, min: Date.new(2020, 01, 01), max: Date.today, class:"form-control" %>
    <br>
    <%= f.submit 'Registrar test positivo', class: "btn btn-outline-success"%>
    <% end %>
</div>