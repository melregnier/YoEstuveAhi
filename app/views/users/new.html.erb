<div class="container p-3 my-3 border">
  <h1>Registrar</h1>
</div>
<div class="container p-3 my-3 border">
  <%= form_for @user do |f|%>
    <div class="form-group">
      <%= f.label :Nombre%><br>
      <%= f.text_field :name, required: true, class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label :Email%><br>
      <%= f.email_field :email, required: true, class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label 'Tipo de documento'%><br>
      <%= f.select :document_type, ['DNI', 'L.C', 'Otro'], class: "form-control"%> <br>
    </div>
    <div class="form-group">
      <%= f.label 'Número de documento'%><br>
      <%= f.text_field :document_number, required: true, class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label :Contraseña%><br>
      <%= f.password_field :password, required: true, class: "form-control"%><br>
    </div>
    <div class="form-group">
      <%= f.label 'Confirmar contraseña'%><br>
      <%= f.password_field :password_confirmation, required: true, class: "form-control"%><br>
    </div>
    <%= f.submit 'Registrarme', class: "btn btn-success"%>
  <%end%>
</div>